<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CERS.LoginPage"
              xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls" 
             ios:Page.UseSafeArea="true" BackgroundColor="White" >
    <NavigationPage.TitleView>
        <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center">
            <Image Grid.Column="0" 
                   Source="seclogo.png" 
                   HeightRequest="40" 
                   VerticalOptions="Center"/>
            <Grid Grid.Column="1" 
                  RowDefinitions="Auto" 
                  VerticalOptions="Center" 
                  HorizontalOptions="Center">
                <Label Grid.Row="0"
                       Text="State Election Commission, H.P." 
                       Style="{StaticResource NavigationLabelColor}" 
                       FontSize="20" 
                       FontAttributes="Bold" 
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />
            </Grid>
        </Grid>
    </NavigationPage.TitleView>

    <Grid>
        <Grid Margin="9" RowDefinitions="*,Auto">
            <ScrollView Grid.Row="0" VerticalOptions="Fill">
                <Grid RowDefinitions="Auto,Auto,Auto,*">
                    
                    <!-- Header Section -->
                    <Grid Grid.Row="0" Margin="0" Padding="0" RowDefinitions="Auto,Auto">
                        <Label Grid.Row="0"
                               TextColor="Navy" 
                               TextDecorations="Underline" 
                               Text="CERS &#10; Candidate Expenditure Reporting System" 
                               HorizontalOptions="Center" 
                               HorizontalTextAlignment="Center"  
                               FontSize="18" 
                               FontAttributes="Bold" 
                               Margin="0,10,0,15"/>
                        <Image Grid.Row="1" 
                               Source="ic_launcher.png" 
                               x:Name="img_launcher" 
                               HorizontalOptions="Center" 
                               HeightRequest="120"/>
                    </Grid>

                    <!-- Sign In Form -->
                    <Frame Grid.Row="1" 
                           CornerRadius="10" 
                           BorderColor="Silver" 
                           VerticalOptions="Center"
                           Margin="0,30,0,20">
                        
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                            <Label Grid.Row="0"
                                   x:Name="lbl_signin" 
                                   Text="Sign In" 
                                   TextColor="Navy" 
                                   HorizontalOptions="Center" 
                                   HorizontalTextAlignment="Center" 
                                   FontSize="18" 
                                   TextDecorations="Underline" 
                                   FontAttributes="Bold" 
                                   Margin="0,5,0,15"/>
                            
                            <!-- Mobile Number Input -->
                            <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                                <Frame Grid.Column="0" 
                                       HeightRequest="45" 
                                       WidthRequest="45" 
                                       CornerRadius="10" 
                                       Padding="0" 
                                       Margin="5">
                                    <Image Source="ic_mobile.png" 
                                           Aspect="AspectFill" 
                                           Margin="0"/>
                                </Frame>
                                <Entry Grid.Column="1"
                                       PlaceholderColor="Gray" 
                                       x:Name="entry_mobileno" 
                                       Placeholder="Enter Mobile No." 
                                       FontAttributes="None" 
                                       HorizontalOptions="Fill"
                                       HorizontalTextAlignment="Start" 
                                       Margin="0,0,20,0" 
                                       TextColor="Black" 
                                       Keyboard="Numeric" 
                                       MaxLength="10"/>
                            </Grid>
                            
                            <Button Grid.Row="2"
                                    x:Name="btn_getotp" 
                                    Text="GET OTP" 
                                    FontSize="18" 
                                    FontAttributes="Bold" 
                                    BackgroundColor="Navy" 
                                    TextColor="White" 
                                    CornerRadius="25" 
                                    HorizontalOptions="Center" 
                                    Clicked="btn_getotp_Clicked" 
                                    Padding="15,10" 
                                    Margin="0,10,0,5"/>

                            <!-- OTP Section -->
                            <Grid Grid.Row="3" 
                                  x:Name="stack_submitotp" 
                                  IsVisible="false" 
                                  RowDefinitions="Auto,Auto">
                                <Grid Grid.Row="0" ColumnDefinitions="Auto,*">
                                    <Frame Grid.Column="0" 
                                           HeightRequest="45" 
                                           WidthRequest="45" 
                                           CornerRadius="10" 
                                           Padding="0" 
                                           Margin="5">
                                        <Image Source="ic_otp.png" 
                                               Aspect="AspectFill" 
                                               Margin="0"/>
                                    </Frame>
                                    <Entry Grid.Column="1"
                                           PlaceholderColor="Gray" 
                                           x:Name="entry_otp" 
                                           Placeholder="Enter OTP" 
                                           FontAttributes="None" 
                                           HorizontalOptions="Fill" 
                                           HorizontalTextAlignment="Start" 
                                           IsTextPredictionEnabled="False" 
                                           IsPassword="True"
                                           Margin="0,0,20,0" 
                                           TextColor="Black" 
                                           Keyboard="Numeric" 
                                           MaxLength="6"/>
                                </Grid>
                                <Button Grid.Row="1"
                                        x:Name="btn_submitotp" 
                                        Text="Submit OTP" 
                                        FontSize="18" 
                                        FontAttributes="Bold" 
                                        BackgroundColor="Navy" 
                                        TextColor="White" 
                                        CornerRadius="25" 
                                        HorizontalOptions="Center" 
                                        Clicked="btn_submitotp_Clicked" 
                                        Padding="15,10" 
                                        Margin="0,10,0,5"/>
                            </Grid>
                        </Grid>
                    </Frame>

                    <!-- App Description -->
                    <Grid Grid.Row="2" RowDefinitions="Auto,Auto">
                        <Label Grid.Row="0"
                               TextColor="Black" 
                               Margin="15,20,15,10" 
                               Padding="10" 
                               LineBreakMode="WordWrap" 
                               x:Name="lbl_appdescription" 
                               HorizontalOptions="Fill" 
                               HorizontalTextAlignment="Start" 
                               FontSize="14"
                               Text="&lt;div style=&quot;text-align:justify; line-height:1.4;&quot;&gt; 
                                CERS (Candidate Expenditure Reporting System) mobile app is developed for the State Election Commission, Himachal Pradesh. 
                                The App has been developed to file different types of Election Expenditure Expenses. 
                                Contesting candidates or candidate's agent will be able to login into this app using their registered mobile number.
                                &lt;/div&gt;" 
                               TextType="Html"/>

                        <Label Grid.Row="1"
                               TextColor="Black" 
                               Margin="15,5,15,10" 
                               Padding="10" 
                               x:Name="lbl_appdescription1" 
                               HorizontalOptions="Fill" 
                               HorizontalTextAlignment="Start" 
                               LineBreakMode="WordWrap" 
                               FontSize="14"/>
                    </Grid>
                </Grid>
            </ScrollView>

            <!-- Footer -->
            <Grid Grid.Row="1" 
                  Margin="10,5,10,5" 
                  HorizontalOptions="Fill">
                <Label Text="Centre Of Competence For Mobile Application Development NIC Himachal Pradesh" 
                       FontSize="12" 
                       Padding="8" 
                       BackgroundColor="White" 
                       TextColor="Navy" 
                       HorizontalTextAlignment="Center" 
                       HorizontalOptions="Fill" 
                       LineBreakMode="WordWrap" 
                       FontAttributes="Bold"/>
            </Grid>
        </Grid>

        <ContentView x:Name="Loading_activity" BackgroundColor="#C0808080" Padding="20, 20" IsVisible="false" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <Grid VerticalOptions="Center" HorizontalOptions="Center">
                <Frame BackgroundColor="White" HorizontalOptions="Fill">
                    <Grid ColumnDefinitions="Auto,*" Margin="6" HorizontalOptions="Fill">
                        <ActivityIndicator Grid.Column="0" 
                                         IsVisible="true" 
                                         IsRunning="true" 
                                         Margin="5"/>
                        <Label Grid.Column="1"
                               x:Name="lbl_PleaseWait" 
                               Text="Please Wait ..." 
                               TextColor="Black" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Fill" 
                               HorizontalTextAlignment="Center" 
                               VerticalTextAlignment="Center" 
                               WidthRequest="600"/>
                    </Grid>
                </Frame>
            </Grid>
        </ContentView>

        <ContentView x:Name="popupDetails_Verified" BackgroundColor="#C0808080" Padding="40, 40" IsVisible="false" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
            <Grid HorizontalOptions="Center" VerticalOptions="Center">
                <Frame BorderColor="#0596f7" CornerRadius="15" Padding="10" VerticalOptions="Fill">
                    <Grid RowDefinitions="*,Auto">
                        <ScrollView Grid.Row="0">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" 
                                  VerticalOptions="Fill" 
                                  BackgroundColor="White" 
                                  RowSpacing="8" 
                                  Padding="6">
                                <Label Grid.Row="0"
                                       x:Name="lbl_popupheading" 
                                       Text="Confirm Your Details!" 
                                       TextColor="#0596f7" 
                                       HorizontalOptions="Center" 
                                       HorizontalTextAlignment="Center" 
                                       FontAttributes="Bold" 
                                       FontSize="16" 
                                       Margin="0,5,0,10"/>
                                <BoxView Grid.Row="1" 
                                         HeightRequest="2" 
                                         BackgroundColor="#0596f7" 
                                         WidthRequest="1000" 
                                         HorizontalOptions="Fill"/>
                                <Image Grid.Row="2" 
                                       Source="Verify_ico.png" 
                                       Margin="10" 
                                       HeightRequest="40"/>
                                <Label Grid.Row="3"
                                       IsVisible="false" 
                                       x:Name="lbl_usertypeheading" 
                                       FontAttributes="Bold" 
                                       TextColor="#0596f7" 
                                       HorizontalOptions="Fill" 
                                       HorizontalTextAlignment="Center" 
                                       FontSize="16" 
                                       Margin="0,5"/>

                                <BoxView Grid.Row="4" 
                                         HeightRequest="2" 
                                         BackgroundColor="#0596f7" 
                                         WidthRequest="1000" 
                                         HorizontalOptions="Fill"/>
                                <Label Grid.Row="5" 
                                       Text="EPIC NO" 
                                       HorizontalOptions="Fill" 
                                       TextColor="Black" 
                                       FontSize="16"/>
                                <Label Grid.Row="6" 
                                       Text="" 
                                       x:Name="Lbl_EPIC_NO" 
                                       HorizontalOptions="Fill" 
                                       FontAttributes="Bold" 
                                       TextColor="Black" 
                                       FontSize="16"/>
                                <Label Grid.Row="7" 
                                       Text="VOTER NAME" 
                                       HorizontalOptions="Fill" 
                                       TextColor="Black" 
                                       FontSize="16"/>
                                <Label Grid.Row="8" 
                                       Text="" 
                                       x:Name="Lbl_VOTER_NAME" 
                                       HorizontalOptions="Fill" 
                                       FontAttributes="Bold" 
                                       TextColor="Black" 
                                       FontSize="16"/>
                                <Label Grid.Row="9" 
                                       Text="RELATIVE NAME" 
                                       HorizontalOptions="Fill" 
                                       TextColor="Black" 
                                       FontSize="16"/>
                                <Label Grid.Row="10" 
                                       Text="" 
                                       x:Name="Lbl_RELATIVE_NAME" 
                                       HorizontalOptions="Fill" 
                                       FontAttributes="Bold" 
                                       TextColor="Black" 
                                       FontSize="16"/>
                                <Label Grid.Row="11" 
                                       Text="Panchayat Name" 
                                       HorizontalOptions="Fill" 
                                       TextColor="Black" 
                                       FontSize="16"/>
                                <Label Grid.Row="12" 
                                       Text="" 
                                       x:Name="Lbl_Panchayat_Name" 
                                       HorizontalOptions="Fill" 
                                       FontAttributes="Bold" 
                                       TextColor="Black" 
                                       FontSize="16"/>
                                <Label Grid.Row="13" 
                                       Text="Contesting For" 
                                       HorizontalOptions="Fill" 
                                       TextColor="Black" 
                                       FontSize="16"/>
                                <!--<Label Grid.Row="14" 
                                       Text="" 
                                       x:Name="Lbl_NominationFor" 
                                       HorizontalOptions="Fill" 
                                       FontAttributes="Bold" 
                                       TextColor="Black" 
                                       FontSize="16"/>
                                <BoxView Grid.Row="15" 
                                         HeightRequest="2" 
                                         BackgroundColor="#0596f7" 
                                         WidthRequest="1000" 
                                         HorizontalOptions="Fill"/>-->
                                         
                                   <Label Grid.Row="14"
                                          x:Name="Lbl_NominationFor"
                                          FontAttributes="Bold"
                                          TextColor="Black"
                                          FontSize="16"
                                          Margin="0,0,0,12"  />

                                   <BoxView Grid.Row="15"
                                          HeightRequest="2"
                                          BackgroundColor="#0596f7"
                                          HorizontalOptions="Fill"
                                          Margin="0,12,0,0" />
                            </Grid>
                        </ScrollView>
                        <Grid Grid.Row="1" ColumnDefinitions="*,*" HorizontalOptions="Fill">
                            <Button Grid.Column="0" 
                                    BackgroundColor="#0596f7" 
                                    TextColor="White" 
                                    FontAttributes="Bold" 
                                    x:Name="Btn_NotMe" 
                                    Clicked="Btn_NotMe_Clicked" 
                                    Text="Not Me !" 
                                    HorizontalOptions="Fill"/>
                            <Button Grid.Column="1" 
                                    BackgroundColor="#0596f7" 
                                    TextColor="White" 
                                    FontAttributes="Bold" 
                                    x:Name="Btn_Continue" 
                                    Clicked="Btn_Continue_Clicked" 
                                    Text="Confirm" 
                                    HorizontalOptions="Fill"/>
                        </Grid>
                    </Grid>
                </Frame>
            </Grid>
        </ContentView>

    </Grid>
</ContentPage>